{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Bash(claude mcp:*)",
      "Bash(npm run lint)",
      "mcp__figma-dev-mode-mcp-server__get_image",
      "Bash(git add:*)",
      "Bash(git commit:*)"
    ],
    "deny": []
  },
  "mcpServers": {
    "figma": {
      "command": "npx",
      "args": [
        "@figma-plugin/figma-mcp-server"
      ],
      "env": {
        "FIGMA_ACCESS_TOKEN": "${FIGMA_ACCESS_TOKEN}"
      },
      "url": "http://127.0.0.1:3845/mcp"
    }
  }
}